## Para crear Nginx:

docker run -d --name nginx_2 nginx


## Para crear MYSQL:

docker run --name mysql_1 -v /media/kvm/docker/mysql_drupal/db_data:/var/lib/mysql \
-e MYSQL_ROOT_PASSWORD=docker -e MYSQL_DATABASE=drupal -e MYSQL_USER=drupal \
-e MYSQL_PASSWORD=drupal -d library/mysql

## Para crear Drupal:

docker run -d --name drupal_3 --link mysql_1:database -p 8092:80 library/drupal
